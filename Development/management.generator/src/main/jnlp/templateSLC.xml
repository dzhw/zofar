<?xml version="1.0" encoding="utf-8"?>
<jnlp spec="$jnlpspec" codebase="http://vmdevwiki.####/${project.build.finalName}/" context="http://vmdevwiki.####/" href="$outputFile">

  <information>
    <title>${project.name}</title>
    <vendor>Deutsches Zentrum fuer Wissenschafts- und Hochschulforschung</vendor>
    <homepage href="http://www.####"/>
    <description></description>
    <description kind="short">${project.name}</description>
    <shortcut online="true">
      <desktop/>
    </shortcut>

    <offline-allowed/>

  </information>
  
  <security>
    <all-permissions/>
  </security>

  <update check="timeout" policy="prompt-update"/>

  <resources os="Mac OS X">
    <java version="1.7+" />
    <java version="1.6" java-vm-args="-d32"/>
     $dependencies
     <jar href="xmllib/xmlbeans_resigned-2.6.0.jar"/>
  </resources>

  <resources>
    <java version="1.6+"/>
     $dependencies
     <jar href="xmllib/xmlbeans_resigned-2.6.0.jar"/>
  </resources>

  <application-desc main-class="$mainClass">
  </application-desc>
</jnlp>
