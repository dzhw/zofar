<?xml version="1.0" encoding="UTF-8"?>
<faces-config xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd" version="2.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <application>
    <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    <resource-bundle>
      <base-name>de.his.zofar.constants.Layout</base-name>
      <var>layoutbundle</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>de.his.zofar.constants.Survey</base-name>
      <var>surveyConstants</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>de.his.zofar.messages.text</base-name>
      <var>msgbundle</var>
    </resource-bundle>
  </application>
  <lifecycle>
    <phase-listener>de.his.zofar.presentation.surveyengine.listener.CustomDelegatingPhaseListenerMulticaster</phase-listener>
    <phase-listener id="nocache">de.his.zofar.presentation.surveyengine.listener.CacheListener</phase-listener>
    <phase-listener id="sessionsecurity">de.his.zofar.presentation.surveyengine.listener.RequestSecurityListener</phase-listener>
  </lifecycle>
  <factory>
    <exception-handler-factory>de.his.zofar.presentation.surveyengine.listener.errorHandling.ZofarExceptionHandlerFactory</exception-handler-factory>
  </factory>
  <navigation-rule>
    <navigation-case>
      <from-outcome>jump</from-outcome>
      <to-view-id>#{jumperBean.target}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/*.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>backward</from-outcome>
      <to-view-id>#{navigatorBean.backwardViewID}</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>same</from-outcome>
      <to-view-id>#{navigatorBean.sameViewID}</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>constraintsOnLoadError</from-outcome>
      <to-view-id>/error/constraints1.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>constraintsOnExitError</from-outcome>
      <to-view-id>/error/constraints2.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page1.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/sc-question-vertical.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page1.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/page1.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page2.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/page2.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page3.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/page3.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page4.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/page4.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page5.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/page5.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>next</from-outcome>
      <to-view-id>#{navigatorBean.sendViewID('/page6.xhtml')}</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
</faces-config>