<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.his.zofar</groupId>
        <artifactId>zofar</artifactId>
        <version>1.0.2</version>
    </parent>
    <artifactId>zofar.webapp.test</artifactId>
    <packaging>war</packaging>
    <name>zofar.webapp.test</name>
    <description>The Test JSF web application. Comes with mockups of all persistence services.</description>
    <dependencies>
        <dependency>
            <groupId>de.his.zofar</groupId>
            <artifactId>zofar.webapp</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <exclusions>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.valuetype</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.question</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.questionnaire</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.survey</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.surveyEngine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>de.his.zofar</groupId>
            <artifactId>zofar.webapp</artifactId>
            <version>${project.version}</version>
            <classifier>${webClassifier}</classifier>
            <exclusions>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.valuetype</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.question</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.questionnaire</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.survey</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>de.his.zofar</groupId>
                    <artifactId>zofar.persistence.surveyEngine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <properties>
        <webClassifier>classes</webClassifier>
    </properties>
    <profiles>
        <profile>
            <id>m2e</id>
            <activation>
                <property>
                    <name>m2e.version</name>
                </property>
            </activation>
            <properties>
                <webClassifier></webClassifier>
            </properties>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>de.his.zofar</groupId>
                            <artifactId>zofar.webapp</artifactId>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
